{
  "manifest_version": 3,
  "name": "Docker Monitor",
  "version": "1.0",
  "description": "Monitor Docker containers, logs, and system usage",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "http://localhost:2375/*",
    "http://127.0.0.1:2375/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
} 